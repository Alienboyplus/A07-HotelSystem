.cmd-bottom-nav {
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 118rpx;
  padding: 0;
  margin: 0 auto;
  color: #000;
  background: #fff;
  border-top: 3rpx #dadada solid;
}
.cmd-bottom-nav-box {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 28rpx;
  line-height: 1;
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-user-select: none;
          user-select: none;
  opacity: 0.7;
  min-width: 64rpx;
  height: 100%;
  background: transparent;
  -webkit-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}
.cmd-bottom-nav-box-img {
  width: 64rpx;
  height: 64rpx;
  opacity: 0.7;
}
.cmd-bottom-nav-box-icon {
  opacity: 0.7;
}
.cmd-bottom-nav-box-text {
  margin-top: 8rpx;
  display: block;
  -webkit-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}
.cmd-bottom-nav-box.cmd-bottom-nav-active {
  color: #000;
  opacity: 1;
}
.cmd-bottom-nav-box.cmd-bottom-nav-active .cmd-bottom-nav-box-img {
  opacity: 1;
}
.cmd-bottom-nav-box.cmd-bottom-nav-active .cmd-bottom-nav-box-icon {
  opacity: 1;
}
/* 只在激活时显示文本 */
.cmd-bottom-nav-text-auto .cmd-bottom-nav-box {
  padding-left: 0;
  padding-right: 0;
  min-width: 68rpx;
}
.cmd-bottom-nav-text-auto .cmd-bottom-nav-box-img {
  padding-top: 0;
  -webkit-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}
.cmd-bottom-nav-text-auto .cmd-bottom-nav-box-icon {
  padding-top: 34rpx;
  -webkit-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}
.cmd-bottom-nav-text-auto .cmd-bottom-nav-box-text {
  -webkit-transform: scale(0);
          transform: scale(0);
}
.cmd-bottom-nav-text-auto .cmd-bottom-nav-box.cmd-bottom-nav-active {
  padding-left: 38rpx;
  padding-right: 38rpx;
}
.cmd-bottom-nav-text-auto .cmd-bottom-nav-box.cmd-bottom-nav-active .cmd-bottom-nav-box-img {
  padding-top: 0;
  opacity: 1;
}
.cmd-bottom-nav-text-auto .cmd-bottom-nav-box.cmd-bottom-nav-active .cmd-bottom-nav-box-icon {
  padding-top: 0;
  opacity: 1;
}
.cmd-bottom-nav-text-auto .cmd-bottom-nav-box.cmd-bottom-nav-active .cmd-bottom-nav-box-text {
  -webkit-transform: scale(1);
          transform: scale(1);
}
/* 固定到页面底部 */
.cmd-bottom-nav-fixed.cmd-bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  margin-bottom: -3rpx;
}

